@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Welcome Back!</h2>
                    <p>Please log in to access your account</p>
                </div>
                <div class="card-body bg-light">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="SystemAccount.Email" class="form-label"></label>
                            <input asp-for="SystemAccount.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="SystemAccount.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SystemAccount.Password" class="form-label"></label>
                            <input asp-for="SystemAccount.Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="SystemAccount.Password" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="None" class="text-danger mb-3"></div>

                        <div class="form-group text-center">
                            <input type="submit" value="Login" class="btn btn-primary btn-lg w-100" />
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center">
                    <a asp-page="Index" class="btn btn-outline-primary btn-sm px-4 py-2 rounded-pill">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}