@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.LoginPage.LoginModel
@{
    Layout = "_LoginLayout";
}
<style>
    body {
        background-color: #f0f2f5;
        padding-top: 5%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        margin: auto;
        max-width: 500px;
        padding: 40px;
        border-radius: 10px;
        border: none;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .card h2 {
            font-weight: 600;
            color: #343a40;
            margin-bottom: 20px;
        }

    .form-control {
        height: 45px;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
    }

    .btn-login {
        width: 100%;
        height: 45px;
        margin-top: 10px;
        font-weight: 600;
        border-radius: 8px;
        background-color: #007bff;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        width: 100%;
        height: 45px;
        margin-top: 10px;
        border-radius: 8px;
    }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded">
                <!-- Header -->
                <div class="card-header text-white text-center login-header">
                    <h2>Welcome Back!</h2>
                    <p>Please log in to access your account</p>
                </div>
                <!-- Body -->
                <div class="card-body login-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="SystemAccount.Email" class="form-label"></label>
                            <input asp-for="SystemAccount.Email" class="form-control login-input" placeholder="Enter your email" />
                            <span asp-validation-for="SystemAccount.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SystemAccount.Password" class="form-label"></label>
                            <input asp-for="SystemAccount.Password" class="form-control login-input" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="SystemAccount.Password" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="None" class="text-danger mb-3"></div>

                        <div class="form-group text-center">
                            <input type="submit" value="Login" class="btn login-btn w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


<!-- Custom Styles -->
<style>
    /* Header styles */
    .login-header {
        background-color: #FF6500; /* Cam nhạt */
        font-size: 1.2rem;
    }

    /* Body styles */
    .login-body {
        background-color: #F9F9F9; /* Nền trắng xám nhạt */
    }

    /* Input styles */
    .login-input {
        border: 1px solid #DDD; /* Viền xám nhẹ */
        padding: 0.5rem;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .login-input:focus {
            border-color: #FF6500; /* Cam nhạt khi focus */
            outline: none;
            box-shadow: 0 0 4px #FF6500;
        }

    /* Button styles */
    .login-btn {
        background-color: #FF6500; /* Cam nhạt */
        color: white;
        border: none;
        font-size: 1rem;
        transition: background-color 0.3s, transform 0.3s;
    }

        .login-btn:hover {
            background-color: #E55C00; /* Cam đậm hơn khi hover */
            transform: scale(1.02); /* Hiệu ứng phóng to nhẹ */
        }

    /* Card Shadow */
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>



@section Scripts {
    <script>
        
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.querySelector(".alert-danger");
            if (errorMessage) {
                setTimeout(function () {
                    errorMessage.style.display = "none";
                }, 2000); 
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

