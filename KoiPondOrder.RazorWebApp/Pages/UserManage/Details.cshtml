@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.UserManage.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">User Details</h3>
                </div>
                <div class="card-body p-4">
                    <h4 class="text-center mb-4">User Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold text-muted">Full Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Phone:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.PhoneNumber)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Address:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Address)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Role:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Role)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Date of Birth:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.DateOfBirth)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Gender:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Gender)</dd>

                        <dt class="col-sm-4 fw-bold text-muted">Status:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Status)</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <a asp-page="./Edit" asp-route-id="@Model.User.UserId" class="btn btn-warning mx-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-page="./Index" class="btn btn-secondary mx-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
