@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.UserManage.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h3 class="mb-0">Confirm Deletion</h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-center text-muted mb-4">
                        Are you sure you want to delete this user? This action is <span class="text-danger fw-bold">irreversible</span>.
                    </p>

                    <div class="user-info">
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Full Name:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Email:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Phone:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.PhoneNumber)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Address:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.Address)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Role:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.Role)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Date of Birth:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.DateOfBirth)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Gender:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.User.Gender)</div>
                        </div>
                    </div>

                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="User.UserId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn custom-btn-danger w-45">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-page="./Index" class="btn custom-btn-secondary w-45">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Card Background */
    .card {
        background-color: #FFFAF0; /* Màu nền dịu mắt */
    }

    /* Button Styles */
    .custom-btn-danger {
        background-color: #C40C0C; /* Màu đỏ đậm */
        color: white;
        border: none;
        font-size: 1rem;
        transition: background-color 0.3s, transform 0.3s;
    }

        .custom-btn-danger:hover {
            background-color: #FF6500; /* Cam nhạt */
            transform: scale(1.02);
        }

    .custom-btn-secondary {
        background-color: #FF8A08; /* Cam đậm */
        color: white;
        border: none;
        font-size: 1rem;
        transition: background-color 0.3s, transform 0.3s;
    }

        .custom-btn-secondary:hover {
            background-color: #FFC100; /* Màu vàng nhạt */
            transform: scale(1.02);
        }

    /* Input Focus Styles */
    .form-control:focus {
        border-color: #FFC100; /* Màu cam dịu khi focus */
        box-shadow: 0 0 4px #FFC100;
        outline: none;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

