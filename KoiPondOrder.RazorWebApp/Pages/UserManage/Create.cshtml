@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.UserManage.CreateModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-dark fw-bold">Create User</h1>
        <p class="text-muted">Please fill out the form below to add a new user to the system.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form method="post" class="p-4 border rounded-3 custom-form shadow-sm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <!-- Full Name -->
                <div class="mb-3">
                    <label asp-for="User.FullName" class="form-label">Full Name</label>
                    <input asp-for="User.FullName" class="form-control rounded-2" placeholder="Enter full name" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label">Email</label>
                    <input asp-for="User.Email" type="email" class="form-control rounded-2" placeholder="Enter email" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label asp-for="User.PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="User.PhoneNumber" type="tel" class="form-control rounded-2" placeholder="Enter phone number" />
                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="User.Address" class="form-label">Address</label>
                    <textarea asp-for="User.Address" class="form-control rounded-2" rows="2" placeholder="Enter address"></textarea>
                    <span asp-validation-for="User.Address" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="User.Role" class="form-label">Role</label>
                    <select asp-for="User.Role" class="form-select rounded-2">
                        <option value="">Select Role</option>
                        <option value="Manager">Manager</option>
                        <option value="ConstructionStaff">Construction Staff</option>
                        <option value="DesignStaff">Design Staff</option>
                        <option value="ConsultingStaff">Consulting Staff</option>
                        <option value="Customer">Customer</option>
                    </select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="User.PasswordHash" class="form-label">Password</label>
                    <input asp-for="User.PasswordHash" type="password" class="form-control rounded-2" placeholder="Enter password" />
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </div>

                <!-- Date of Birth -->
                <div class="mb-3">
                    <label asp-for="User.DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="User.DateOfBirth" type="date" class="form-control rounded-2" />
                    <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
                </div>

                <!-- Gender -->
                <div class="mb-3">
                    <label asp-for="User.Gender" class="form-label">Gender</label>
                    <select asp-for="User.Gender" class="form-select rounded-2">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="User.Gender" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn custom-btn btn-lg rounded-2">Create User</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-page="Index" class="btn btn-outline-secondary btn-sm rounded-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Form Background */
    .custom-form {
        background-color: #FFFAF0; /* Màu nền dịu mắt */
    }

    /* Button Styles */
    .custom-btn {
        background-color: #FF6500; /* Cam nhạt */
        color: white;
        border: none;
        font-size: 1rem;
        transition: background-color 0.3s, transform 0.3s;
    }

        .custom-btn:hover {
            background-color: #FF8A08; /* Cam đậm hơn */
            transform: scale(1.02);
        }

    /* Input Focus Styles */
    .form-control:focus {
        border-color: #FFC100; /* Màu cam dịu khi focus */
        box-shadow: 0 0 4px #FFC100;
        outline: none;
    }
</style>


@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
