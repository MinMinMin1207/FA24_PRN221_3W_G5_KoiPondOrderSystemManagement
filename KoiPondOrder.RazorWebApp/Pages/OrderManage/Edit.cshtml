@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.OrderManage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <label class="control-label">Customer</label>
                <select asp-for="Order.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Order Description</label>
                <input asp-for="Order.OrderDescription" class="form-control" />
                <span asp-validation-for="Order.OrderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Order Date</label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Total Cost</label>
                <input asp-for="Order.TotalCost" class="form-control" />
                <span asp-validation-for="Order.TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Final Cost</label>
                <input asp-for="Order.FinalCost" class="form-control" />
                <span asp-validation-for="Order.FinalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Payment</label>
                <select asp-for="Order.PaymentId" class="form-control" asp-items="ViewBag.PaymentId"></select>
                <span asp-validation-for="Order.PaymentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Promotion</label>
                <select asp-for="Order.PromotionId" class="form-control" asp-items="ViewBag.PromotionId"></select>
                <span asp-validation-for="Order.PromotionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Delivery Address</label>
                <input asp-for="Order.DeliveryAddress" class="form-control" />
                <span asp-validation-for="Order.DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Delivery Date</label>
                <input asp-for="Order.DeliveryDate" class="form-control" />
                <span asp-validation-for="Order.DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <select asp-for="Order.OrderStatus" class="form-control">
                    <option value="" selected disabled>Change status</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Pending">Pending</option>
                </select>
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
