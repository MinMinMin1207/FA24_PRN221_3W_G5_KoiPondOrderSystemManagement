@page
@model KoiPondOrderSystemManagement.RazorWebApp.Pages.PaymentManage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-center" style="color:#FF8A08;">@ViewData["Title"]</h1>

<h3 class="text-warning text-center" style="color:#FF6500;">Are you sure you want to delete this payment?</h3>

<div>
    <h4 style="color:#FFC100;">Payment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.OrderId)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.OrderId)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.PaymentMethod)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.PaymentMethod)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.Amount)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.Amount)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.PaymentDate)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.PaymentDate)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.PaymentStatus)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.PaymentStatus)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.CancellationReason)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.CancellationReason)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.Tax)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.Tax)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.Discount)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.Discount)
        </dd>

        <dt class="col-sm-3 font-weight-bold" style="color:#C40C0C;">
            @Html.DisplayNameFor(model => model.Payment.FinalAmount)
        </dt>
        <dd class="col-sm-9" style="color:#FF6500;">
            @Html.DisplayFor(model => model.Payment.FinalAmount)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Payment.PaymentId" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger btn-sm" style="background-color:#C40C0C;">Delete</button> |
            <a asp-page="./Index" class="btn btn-secondary btn-sm" style="background-color:#FF8A08;">Back to List</a>
        </div>
    </form>
</div>
